			intent.putExtra("number_of_comments",number_of_comments);
			intent.setClass(MainActivity.this, EnterCommentsActivity.class);
			startActivityForResult(intent, 1);
			
		case R.id.item2:
			
		     	
		}
		
		
		return super.onOptionsItemSelected(item);
	}
    

